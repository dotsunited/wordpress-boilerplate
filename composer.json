{
    "name": "dotsunited/wordpress-boilerplate",
    "description": "WordPress Boilerplate",
    "keywords": [
        "wordpress",
        "boilerplate"
    ],
    "homepage": "https://github.com/dotsunited/wordpress-boilerplate",
    "license": "MIT",
    "config": {
        "platform": {
            "php": "8.2"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "composer/installers": "^1.4",
        "wpackagist-plugin/meta-box": "^5.6"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "DotsUnited\\": ""
        }
    },
    "extra": {
        "installer-paths": {
            "public/wp-content/mu-plugins/{$name}/": [
                "type:wordpress-plugin",
                "type:wordpress-muplugin"
            ],
            "public/wp-content/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "wordpress-install-dir": "public"
    },
    "scripts": {
        "post-create-project-cmd": [
            "DotsUnited\\ComposerScripts::postCreateProject"
        ],
        "fix": "php-cs-fixer fix --config .php_cs"
    }
}
